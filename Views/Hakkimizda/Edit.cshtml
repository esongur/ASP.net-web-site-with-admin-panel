@model Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Hakkimizda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>
<div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table table-responsive-sm"></i> Hakkımızda Güncelleme</h3>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="/YonetimPaneli">AnaSayfa</a></li>
        <li><i class="fa fa-table"></i>Hakkımızda</li>
        <li><i class="fa fa-table"></i>Güncelleme-@Model.HakkimizdaId</li></ol>
</div>
@using (Html.BeginForm("Edit", "Hakkimizda", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
        <h4>Hakkimizda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HakkimizdaId)

        <div class="form-group">
            @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea class="ckeditor" name="Aciklama">@Model.Aciklama</textarea>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimUrl1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL1" accept=".png,.jpeg,.jpg" class="form-control-file btn-danger" />
                @Html.ValidationMessageFor(model => model.ResimUrl1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimUrl2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL2" accept=".png,.jpeg,.jpg" class="form-control-file btn-danger" />

                @Html.ValidationMessageFor(model => model.ResimUrl2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimUrl3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL3" accept=".png,.jpeg,.jpg" class="form-control-file btn-danger" />

                @Html.ValidationMessageFor(model => model.ResimUrl3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
