@model Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Urunler

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>

<div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table table-responsive-sm"></i> Ürün Güncelle</h3>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="/Admin/Index/">AnaSayfa</a></li>
        <li><i class="fa fa-table"></i><a href="/Urunler/">Ürünler</a></li>
        <li><i class="fa fa-table">Ürün Güncelle</i></li>

    </ol>
</div>
@using (Html.BeginForm("Edit", "Urunler", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Urunler</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UrunlerId)

        <div class="form-group">
            @Html.LabelFor(model => model.UrunlerBaslik, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UrunlerBaslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrunlerBaslik, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UrunKategoriId, "UrunKategoriId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UrunKategoriId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UrunKategoriId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UrünlerAciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea class="ckeditor form-control" name="UrünlerAciklama">@Model.UrünlerAciklama</textarea>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UrunlerFiyat, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UrunlerFiyat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UrunlerFiyat, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2"> Önceki Resim</label>
                <div class="col-lg-10">
                    <img src="@Model.UrunlerResimURL1" width="100" height="100" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UrunlerResimURL1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" class="form-control " name="UrunlerResimURL1" accept=".jpg,.jpeg,.png" />

                </div>
            </div>
            

            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2"> Önceki Resim</label>
                <div class="col-lg-10">
                    <img src="@Model.UrunlerResimURL2" width="100" height="100" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UrunlerResimURL2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" class="form-control " name="UrunlerResimURL2" accept=".jpg,.jpeg,.png" />

                </div>
            </div>
            -------

            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2"> Önceki Resim</label>
                <div class="col-lg-10">
                    <img src="@Model.UrunlerResimURL3" width="100" height="100" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UrunlerResimURL3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" class="form-control " name="UrunlerResimURL3" accept=".jpg,.jpeg,.png" />

                </div>
            </div>


        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
