@model IEnumerable<Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}
<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });

    });
</script>

<div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table table-responsive-sm"></i> Ürün </h3>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="/Admin/Index/">AnaSayfa</a></li>
        <li><i class="fa fa-table"></i><a href="/Urunler/">Ürünler</a></li>

    </ol>
</div><a class="btn btn-default" href="/Urunler/Create">Yeni Ürün </a>
<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Ürün Fiyat</th>
            <th>Resim Url 1</th>
            <th>Resim Url 2</th>
            <th>Resim Url 3</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunlerId</td>
                <td>@item.UrunlerBaslik</td>
                <td>@item.UrunKategori.UrunKategoriAd</td>
                <td>@item.UrunlerFiyat</td>
                <td><img src="@item.UrunlerResimURL1" width="100" height="100" /></td>
                <td><img src="@item.UrunlerResimURL2" width="100" height="100" /></td>
                <td><img src="@item.UrunlerResimURL3" width="100" height="100" /></td>
                <td><a href="/Urunler/Edit/@item.UrunlerId">Güncelle</a> | <a href="/Urunler/Delete/@item.UrunlerId">Sil</a></td>
            </tr>
        }



    </tbody>
</table>
