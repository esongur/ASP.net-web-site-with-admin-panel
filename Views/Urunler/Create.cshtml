
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>

<div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table table-responsive-sm"></i> Ürün Oluştur</h3>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="/Admin/Index/">AnaSayfa</a></li>
        <li><i class="fa fa-table"></i><a href="/Urunler/">Ürünler</a></li>
        <li><i class="fa fa-table">Ürün Oluştur</i></li>

    </ol>
</div>
<div class="form">
    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create" enctype="multipart/form-data">*@

    @using (Html.BeginForm("Create", "Urunler", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UrunlerBaslik" name="UrunlerBaslik" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("UrunKategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor form-control" name="UrünlerAciklama"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Fiyat <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UrunlerFiyat" name="UrunlerFiyat" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim 1</label>
            <div class="col-lg-10">
                <input type="file" class="form-control " name="ResimURL1" accept=".jpg,.jpeg,.png" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim 2</label>
            <div class="col-lg-10">
                <input type="file" class="form-control " name="ResimURL2" accept=".jpg,.jpeg,.png"  />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim 3</label>
            <div class="col-lg-10">
                <input type="file" class="form-control " name="ResimURL3" accept=".jpg,.jpeg,.png"  />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Urunler/Index">İptal</a></button>
            </div>
        </div>
    }

    @*</form>*@
</div>
