@model Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Blog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>
<div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table table-responsive-sm"></i> Blog-Haber Güncelle</h3>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="/YonetimPaneli">AnaSayfa</a></li>
        <li><i class="fa fa-table"></i><a href="/Blog/">Blog-Haber</a></li>
        <li><i class="fa fa-table">Blog-Haber Güncelle</i></li>

    </ol>
</div>
@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
        <div class="col-lg-10">
            <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
        </div>
    </div>
    <div class="form-group ">
        <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
        <div class="col-lg-10">
            @Html.DropDownList("BlogKategoriId", null, new { @class = "form-control" })
        </div>
    </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor form-control" name="Icerik">@Model.Aciklama</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2"> Önceki Resim</label>
            <div class="col-lg-10">
                <img src="@Model.ResimURL" width="100" height="100" />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input type="file" class="form-control " name="ResimURL" accept=".jpg,.jpeg,.png" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Blog/Index">İptal</a></button>
            </div>
        </div>
}
