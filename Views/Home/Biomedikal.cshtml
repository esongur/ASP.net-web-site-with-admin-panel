@using PagedList;
@using PagedList.Mvc;
@using Ertunc_Tibbi_Cihaz_Web_Site.Helper
@model IPagedList<Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Biomedikal>
@{
    ViewBag.Title = "Biomedikal";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="inner-heading">
                    <h2>Biomedikal Hizmetler</h2>
                </div>
            </div>
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="/Anasayfa"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="#">Biomedikal Hizmetler</a><i class="icon-angle-right"></i></li>

                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="span3">
                <aside class="left-sidebar">
                    <div class="widget">
                            
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BiomedikalKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Eklenen Biomedikal Hizmetler</h5>
                        @{
                            Html.RenderAction("BiomedikalKayitPartial", "Home");
                        }
                    </div>
                </aside>
            </div>

            
                <div class="span9">
                    <div class="container">
                        <div class="row">
                            <div class="span8">
                                <h2 class="text-center" style="text-emphasis-position:above"><strong> Biyomedikal Hizmetlerimiz</strong> </h2>
                                <h6 class="text-center">Teknik Servis Talep Formu</h6>
                                <form action="/Home/Biomedikal" method="post" role="form" class="contactForm">
                                    @Html.AntiForgeryToken()
                                    <div id="sendmessage">@ViewBag.Uyari</div>
                                    <div id="errormessage"></div>
                                    <div class="row">
                                        <div style="position:absolute">
                                            <div class="span8 form-group">
                                                <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Kurum Adı" data-rule="minlen:4" data-msg="Lütfen En Az 4 Karakter Giriniz." />
                                                <div class="validation">*</div>
                                            </div>
                                            <div class="span8 form-group">
                                                <input type="text" class="form-control" name="tel" id="tel" placeholder="Telefon Numaranız" data-rule="required" data-msg="Lutfen Telefon numranızı giriniz." />
                                                <div class="validation"></div>
                                            </div>
                                            <div class="span8 margintop10 form-group">
                                                <textarea class="form-control" name="adres" rows="5" data-rule="required" data-msg="Adresinizi giriniz" placeholder="Adres"></textarea>
                                                <div class="validation">*</div>

                                            </div>
                                            <div class="span8 form-group">
                                                <input type="email" class="form-control" name="email" id="email" placeholder="Email Adresi" data-rule="required" data-msg="Email Formatında olmalı" />
                                                <div class="validation">*</div>
                                            </div>
                                            <div class="span8 form-group">
                                                <input type="text" class="form-control" name="urun" id="productname" placeholder="Ürün Adı" data-rule="minlen:4" data-msg="Lütfen En Az 8 Karakter Giriniz." />
                                                <div class="validation">*</div>
                                            </div>
                                            <div class="span8 margintop10 form-group">
                                                <textarea class="form-control" name="mesaj" rows="12" data-rule="required" data-msg="Lütfen Mesajınızı ve Teknik Destek Talebinizi Yazınız..." placeholder="Lütfen Mesajınızı ve Teknik Destek Talebinizi Yazınız..."></textarea>
                                                <div class="validation">*</div>
                                                <p class="text-center">
                                                    <button class="btn btn-large btn-theme margintop10" type="submit">Gönder</button>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
   
</section>
@{
    Html.RenderAction("FooterPartial", "Home");}
