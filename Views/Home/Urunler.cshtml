@using PagedList;
@using PagedList.Mvc;
@using Ertunc_Tibbi_Cihaz_Web_Site.Helper;

@model IPagedList<Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Urunler>
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="inner-heading">
                    <h2>Ürünler</h2>
                </div>
            </div>
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="/Anasayfa"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="#">Ürünler</a><i class="icon-angle-right"></i></li>

                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="span3">
                <aside class="left-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input placeholder="Type something" type="text" class="input-medium search-query">
                            <button type="submit" class="btn btn-square btn-theme">Search</button>
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("UrunKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Eklenen Ürünler</h5>
                        @{
                            Html.RenderAction("UrunKayitPartial", "Home");
                        }
                    </div>
                </aside>
            </div>
            <div class="span1">
                <div class="container">
                    <div class="container-fluid">
                        <h2>Ürünlerimiz</h2>

                    </div>
                    <div class="span6">
                        <h4>Müşteri Ürün <strong>Talep Formu</strong></h4>

                        <form action="/Home/Urunler" method="post" role="form" class="contactForm">
                            @Html.AntiForgeryToken()
                            <div id="sendmessage">@ViewBag.Uyari</div>
                            <div id="errormessage"></div>

                            <div style="position:absolute">
                                <div class="span8 form-group">
                                    <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Kurum Adı" data-rule="minlen:4" data-msg="Lütfen En Az 4 Karakter Giriniz." />
                                    <div class="validation">*</div>
                                </div>
                                <div class="span8 form-group">
                                    <input type="text" class="form-control" name="tel" id="tel" placeholder="Telefon Numaranız" data-rule="required" data-msg="Lutfen Telefon numranızı giriniz." />
                                    <div class="validation"></div>
                                </div>
                                <div class="span8 margintop10 form-group">
                                    <textarea class="form-control" name="adres" rows="5" data-rule="required" data-msg="Adresinizi giriniz" placeholder="Adres"></textarea>
                                    <div class="validation">*</div>

                                </div>
                                <div class="span8 form-group">
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Email Adresi" data-rule="required" data-msg="Email Formatında olmalı" />
                                    <div class="validation">*</div>
                                </div>
                                <div class="span8 form-group">
                                    <input type="text" class="form-control" name="urun" id="productname" placeholder="Ürün Adı" data-rule="minlen:4" data-msg="Lütfen En Az 8 Karakter Giriniz." />
                                    <div class="validation">*</div>
                                </div>
                                <div class="span8 margintop10 form-group">
                                    <textarea class="form-control" name="mesaj" rows="12" data-rule="required" data-msg="Lütfen Mesajınızı ve Talep Ettiğiniz Ürünün Miktarını Yazınız..." placeholder="Lütfen Mesajınızı ve Talep Ettiğiniz Ürünün Miktarını Yazınız..."></textarea>
                                    <div class="validation">*</div>
                                    <p class="text-center">
                                    <button class="btn btn-large btn-theme margintop10" type="submit">Gönder</button>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <hr>

            
        </div>
    </div>
</section>
@{
    Html.RenderAction("FooterPartial", "Home");}
