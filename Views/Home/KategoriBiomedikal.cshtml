@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Biomedikal>
@{
    ViewBag.Title = "KategoriBiomedikal";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="inner-heading">
                    <h2>Biomedikal Hizmetler</h2>
                </div>
            </div>
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="/Anasayfa"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="/Home/Biomedikal/">Biomedikal Hizmetler</a><i class="icon-angle-right"></i></li>

                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="span3">
                <aside class="left-sidebar">
                    <div class="widget">
                        
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BiomedikalKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Eklenen Ürünler</h5>
                        @{
                            Html.RenderAction("BiomedikalKayitPartial", "Home");
                        }
                    </div>
                </aside>
            </div>
            <div class="span9">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {


                            <div class="urunlist" style="width:500px; margin-bottom: 60px; border-style:hidden ">
                                <a href="#">
                                    <img src="@item.ResimURL" style="height:90px;">
                                    <span class="baslik" style="color:#263b7e; font-weight:600; font-size:14px;">@item.Baslik</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>


                <div id="pagination">
                    @Html.PagedListPager(Model, sayfa => Url.Action("Biomedikal", new { sayfa }), PagedListRenderOptions.TwitterBootstrapPager)
                </div>
            </div>
        </div>
    </div>
</section>
@{
    Html.RenderAction("FooterPartial", "Home");}


