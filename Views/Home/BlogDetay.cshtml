@model Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Blog
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="inner-heading">
                    <h2>Blog-Haberler</h2>
                </div>
            </div>
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="/Anasayfa"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="#">Blog</a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog Detay</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="span4">
                <aside class="left-sidebar">
                    <div class="widget">

                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Latest posts</h5>
                        @{
                            Html.RenderAction("BlogKayitPartial", "Home");
                        }
                    </div>
                </aside>
            </div>


            <div class="span8">
                <article>
                    <div class="row">

                            <div class="span8">
                                <div class="post-image">
                                    <div class="post-heading">
                                        <h3><a>@Model.Baslik</a></h3>
                                    </div>
                                    <img src="@Model.ResimURL" alt="@Model.Baslik" />
                                </div>
                                <p>
                                    @Html.Raw(Model.Aciklama)
                                </p>

                            </div>
                        }
                    </div>
                </article>


            </div>
        </div>
    </div>
</section>
@{
    Html.RenderAction("FooterPartial", "Home");
}

