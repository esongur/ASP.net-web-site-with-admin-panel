@model IEnumerable<Ertunc_Tibbi_Cihaz_Web_Site.Models.Model.Hakkimizda>
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="inner-heading">
                    <h2>Kurumsal</h2>
                </div>
            </div>
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="/Anasayfa"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Kurumsal</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="span3">
                <aside class="left-sidebar">
                    <div class="widget">
                        @{
                            Html.RenderPartial("KurumsalMenuPartial","Home");
                        }
                    </div>
                    
                </aside>
            </div>
            <section id="content">
                <div class="container">
                    <div class="row">
                        <div class="span8">
                            @foreach (var item in Model)
                            {
                                <h2><strong>Ertunç Tibbi Cihazlar Hakkımızda</strong></h2>
                                <p>@Html.Raw(item.Aciklama)</p>

                            <div class="flexslider">
                                <ul class="slides">
                                    <li>
                                        <img src="@item.ResimUrl1" alt="" />
                                    </li>
                                    <li>
                                        <img src="@item.ResimUrl2" alt="" />
                                    </li>
                                    <li>
                                        <img src="@item.ResimUrl3" alt="" />
                                    </li>
                                </ul>
                            </div>
                            }
                        </div>
                            
                        <div class="span8">
                            <!-- start flexslider -->
                   
                            <!-- end flexslider -->
                        </div>
                    </div>

                </div>
            </section>
            </div>
        </div>
    
</section>


@{
    Html.RenderAction("FooterPartial", "Home");}