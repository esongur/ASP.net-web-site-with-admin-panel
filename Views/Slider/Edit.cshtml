                <input type="file" name="ResimURL" class="form form-control"  /><a>Önerilen Boyut: 1900x600</a>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
